<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/text</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:windowBackground">@color/windowBackground</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="ShapeAppearanceOverlay.Button.Circle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="AppThemeTransparent" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="expandedSubtitleTextAppearance">
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textColor">@color/textWhite</item>
    </style>

    <style name="expandedTitleTextAppearance">
        <item name="android:textSize">@dimen/text_xlarge</item>
        <item name="android:textColor">@color/textWhite</item>
    </style>

    <style name="collapsedSubtitleTextAppearance">
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textColor">@color/textWhite</item>
    </style>

    <style name="collapsedTitleTextAppearance">
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textColor">@color/textWhite</item>
    </style>

    <style name="CollapsingToolbarLayoutTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="collapsedSubtitleTextAppearance">@style/collapsedSubtitleTextAppearance</item>
        <item name="collapsedTitleTextAppearance">@style/collapsedTitleTextAppearance</item>
        <item name="expandedSubtitleTextAppearance">@style/expandedSubtitleTextAppearance</item>
        <item name="expandedTitleTextAppearance">@style/expandedTitleTextAppearance</item>
    </style>

    <style name="MoreSectionTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_xsmall</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">@dimen/padding_large</item>
    </style>
</resources>
